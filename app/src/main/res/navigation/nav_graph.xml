<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.readingbooks.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.readingbooks.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.example.readingbooks.BookListFragment"
        android:label="Book List"
        tools:layout="@layout/fragment_book_list" />
    <!-- Add other fragments like registration if needed -->
    <action
        android:id="@+id/action_global_bookListFragment"
        app:destination="@id/bookListFragment" />

    <action
        android:id="@+id/action_loginFragment_to_bookListFragment"
        app:destination="@id/bookListFragment" />
    <action
        android:id="@+id/sign_up_link"
        app:destination="@id/signUpFragment" />
</navigation>